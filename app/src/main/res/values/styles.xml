<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--NoTitleFullScreen-->
    <style name="NoTitleFullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--底部导航栏radio风格-->
    <style name="box_tab_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@drawable/box_tab_bottom_text_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:button">@null</item>
    </style>

    <!--发现Fragment顶部tabitem风格-->
    <style name="box_find_tab_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">@drawable/box_tab_bottom_text_selector</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
